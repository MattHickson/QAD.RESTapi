@page
@model POSPages.Pages.CreateModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login Create</h1>

<h4>User Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <labal>Enter User Name</labal>
                <input asp-for="Customer.CustomerName" class="form-control" />
                <span asp-validation-for="Customer.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <labal>Enter Password</labal>
                <input asp-for="Customer.CustomerPassword" class="form-control" />
                <span asp-validation-for="Customer.CustomerPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Cancel</a>
</div>
<div>
    <a asp-page="New Login">Create New Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
