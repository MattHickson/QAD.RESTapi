@page
@model POSPages.Pages.NewLoginModel

@{
    ViewData["Title"] = "New Login";
}

<h1>Login Create</h1>

<h4>Create User Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <labal>Enter User Name  </labal>
                <input asp-for="Customer.CustomerName" class="form-control" />
                <span asp-validation-for="Customer.CustomerName" class="text-danger"></span>
                Length of 4-20 Characters or letters.
            </div>
            <br />
            <div class="form-group">
                <labal>Enter Password  </labal>
                <input asp-for="Customer.CustomerPassword" class="form-control" />
                <span asp-validation-for="Customer.CustomerPassword" class="text-danger"></span>
                Length of 4-32 Characters or letters.
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <p> All Accounts are deleted daily!</p>
    
    <a asp-page="Index">Cancel</a>
</div>
<p>-----------------------------------------------------------</p>
<p> Already have an Account?</p>
<div><a asp-page="Login">Existing Login</a></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
