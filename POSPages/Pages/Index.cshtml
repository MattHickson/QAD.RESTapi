@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@{
    
}
<h1>Enter your customer name and start ordering!</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewCustomer.CustomerName" class="control-label"></label>
                <input asp-for="NewCustomer.CustomerName" class="form-control" />
                <span asp-validation-for="NewCustomer.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>